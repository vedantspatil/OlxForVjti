<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundorange"
    tools:context="com.example.vedan.olxforvjti.ProfileActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

            </LinearLayout>

            <ImageView
                android:src="@drawable/noimageavailable_1"
                android:id="@+id/seller_userimage"
                android:adjustViewBounds="true"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:padding="5dp"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/seller_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/seller_userimage"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textSize="20sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/seller_emailicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:drawablePadding="10dp"
                    android:src="@drawable/ic_email_orange_24dp"></ImageView>

                <TextView
                    android:id="@+id/seller_emailview"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="50dp"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/seller_branchicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/seller_emailicon"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:src="@drawable/ic_content_orange_24dp"></ImageView>

                <TextView
                    android:id="@+id/seller_branchview"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_below="@+id/seller_emailview"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="50dp"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/seller_yearicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/seller_branchview"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:src="@drawable/ic_edit_orange_24dp"></ImageView>

                <TextView
                    android:id="@+id/seller_yearview"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_below="@+id/seller_branchview"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="50dp"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/seller_phoneicon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/seller_yearview"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:src="@drawable/ic_call_orange_24dp">

                </ImageView>

                <TextView
                    android:id="@+id/seller_phoneview"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_below="@+id/seller_yearview"
                    android:layout_marginTop="20dp"
                    android:drawablePadding="10dp"
                    android:paddingLeft="50dp"
                    android:textSize="18sp" />

                <ImageButton
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_icons8_hangout_1"
                    android:id="@+id/hangouts"
                    android:layout_marginStart="50dp"
                    android:layout_alignBottom="@+id/dailer"
                    android:layout_below="@id/seller_phoneview"
                    android:layout_marginLeft="50dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_below="@+id/hangouts"
                    android:layout_marginTop="10dp"
                    android:text="MEssage Now"
                    android:textAllCaps="true"
                    android:layout_marginLeft="30dp" />

                <ImageButton
                    android:id="@+id/dailer"
                    android:layout_marginLeft="85dp"
                    android:layout_marginTop="30dp"
                    android:layout_below="@+id/seller_phoneview"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/hangouts"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_call_blue_24dp" />
                <TextView
                    android:layout_marginLeft="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/hangouts"
                    android:layout_below="@+id/dailer"
                    android:layout_marginTop="10dp"
                    android:text="CALL Now"
                    android:textAllCaps="true"
                    />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>