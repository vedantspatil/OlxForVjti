<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vedan.olxforvjti.ProfileActivity"
    android:background="@drawable/background1"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

        </LinearLayout>

        <ImageView
            android:id="@+id/profile_userimage"
            android:src="@drawable/noimageavailable_1"
            android:adjustViewBounds="true"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:padding="5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/profile_userimage"
            android:layout_marginTop="11dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="20sp" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
        <ImageView
            android:id="@+id/profile_emailicon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:drawablePadding="10dp"
            android:src="@drawable/ic_email_accent_24dp">
        </ImageView>
            <TextView
                android:id="@+id/profile_emailview"
                android:textSize="18sp"
                android:paddingLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:drawablePadding="10dp"
              />
            <ImageView
                android:id="@+id/profile_branchicon"
                android:layout_below="@+id/profile_emailicon"
                android:layout_marginTop="20dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:drawablePadding="10dp"
                android:src="@drawable/ic_content_paste_accent_24dp">
            </ImageView>
            <TextView
                android:id="@+id/profile_branchview"
                android:textSize="18sp"
                android:paddingLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/profile_emailview"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:drawablePadding="10dp"
              />
            <ImageView
                android:id="@+id/profile_yearicon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/profile_branchview"
                android:src="@drawable/ic_edit_accent_24dp">
            </ImageView>
            <TextView
                android:id="@+id/profile_yearview"
                android:textSize="18sp"
                android:paddingLeft="50dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/profile_branchview"
                android:layout_marginTop="20dp"
                android:layout_height="24dp"
                android:drawablePadding="10dp"
              />
            <ImageView
                android:id="@+id/profile_phoneicon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/profile_yearview"
                android:src="@drawable/ic_call_accent_24dp">
            </ImageView>
            <TextView
                android:id="@+id/profile_phoneview"
                android:textSize="18sp"
                android:paddingLeft="50dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/profile_yearview"
                android:layout_marginTop="20dp"
                android:layout_height="24dp"
                android:drawablePadding="10dp"
              />
            <Button
                android:id="@+id/profile_editButton"
                android:background="@drawable/profile_buttonstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:layout_below="@+id/profile_phoneicon"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"

                />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
